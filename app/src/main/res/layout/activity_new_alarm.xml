<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.josh.androidalarm.AlarmActivity"
    android:baselineAligned="false"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <RelativeLayout
        android:layout_width="372dp"
        android:layout_height="489dp"
        tools:layout_editor_absoluteY="15dp"
        tools:layout_editor_absoluteX="6dp">

        <Button
            android:id="@+id/createAlarmButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Alarm"
            tools:layout_editor_absoluteX="129dp"
            tools:layout_editor_absoluteY="474dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <edu.ilstu.it226.alarm.MultiSpinner
            android:id="@+id/multi_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/timePicker"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/optionalMessageTextField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/createAlarmButton"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/multi_spinner"
            android:ems="10"
            android:hint="Optional Message..."
            android:inputType="textPersonName" />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>